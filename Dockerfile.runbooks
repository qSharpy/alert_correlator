FROM node:18-alpine

WORKDIR /app

# Copy package files first for better layer caching
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy application files
COPY server.js .
COPY index.html .
COPY styles.css .
COPY script.js .
COPY runbooks/ ./runbooks/

# Expose the port the app runs on
EXPOSE 3000

# Command to run the application
CMD ["npm", "start"]